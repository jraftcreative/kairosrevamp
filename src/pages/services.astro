---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');

const services = [
  {
    title: 'Financial Planning',
    image: `${base}images/service-financial-planning.jpg`,
    description: 'Our comprehensive six-step financial planning process helps you understand your current financial position and create a roadmap to achieve your goals.',
    items: [
      'Retirement planning',
      'Education funding',
      'Wealth accumulation',
      'Tax-efficient strategies',
    ],
    imagePosition: 'left',
  },
  {
    title: 'Investment Methodologies',
    image: `${base}images/investment-methodologies.png`,
    description: 'Using our proprietary V.E.S.T analysis framework, we help you build and manage investment portfolios aligned with your risk tolerance and objectives.',
    items: [
      'Risk assessment and profiling',
      'Portfolio diversification',
      'Market analysis and insights',
      'Performance monitoring',
    ],
    imagePosition: 'right',
  },
  {
    title: 'Insurance Selection',
    image: `${base}images/service-insurance-selection.jpg`,
    description: 'We analyse your protection needs and recommend best-in-class insurance solutions to safeguard you and your loved ones.',
    items: [
      'Life and health insurance',
      'Critical illness coverage',
      'Income protection',
      'Estate planning',
    ],
    imagePosition: 'left',
  },
  {
    title: 'Business Solutions',
    image: `${base}images/service-business-solutions.jpg`,
    description: 'Comprehensive protection and planning solutions for businesses of all sizes, from key person insurance to succession planning.',
    items: [
      'Key person insurance',
      'Business continuity planning',
      'Employee benefits',
      'Buy-sell agreements',
    ],
    imagePosition: 'right',
  },
];
---

<Layout title="Our Services" description="Comprehensive financial services in Singapore â€” financial planning, investment advisory, insurance selection, and business solutions tailored to your goals.">
  <Header />

  <!-- Hero Section -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-7xl mx-auto max-w-3xl fade-up">
      <div class="accent-divider mb-6"></div>
      <p class="text-sm font-semibold tracking-widest text-[#1E3A5F] uppercase mb-4">Our Services</p>
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-[#1E3A5F] leading-tight mb-8">
        Comprehensive Financial Solutions
      </h1>
      <p class="text-[#666666] text-lg leading-relaxed">
        From personal financial planning to business advisory, we offer a full spectrum of services tailored to your unique needs and goals.
      </p>
    </div>
  </section>

  <!-- Services -->
  {services.map((service) => (
    <section class="border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20 py-16 md:py-24">
        <div class={`grid lg:grid-cols-2 gap-8 lg:gap-20 items-center fade-up ${service.imagePosition === 'right' ? '' : ''}`}>
          <!-- Image -->
          <div class={service.imagePosition === 'right' ? 'order-1 lg:order-2' : ''}>
            <img
              src={service.image}
              alt={service.title}
              class="w-full h-[300px] md:h-[400px] object-cover rounded-lg"
            />
          </div>

          <!-- Content -->
          <div class={service.imagePosition === 'right' ? 'order-2 lg:order-1' : ''}>
            <div class="accent-divider mb-6"></div>
            <h2 class="font-serif text-2xl md:text-3xl text-[#1E3A5F] mb-6">{service.title}</h2>
            <p class="text-[#666666] leading-relaxed mb-8">{service.description}</p>
            <ul class="space-y-4">
              {service.items.map((item) => (
                <li class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-[#E63946] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-[#333333]">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- CTA Section -->
  <section class="bg-[#F5F7FA] py-16 md:py-20 px-6 md:px-12 lg:px-20">
    <div class="max-w-7xl mx-auto fade-up">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="accent-divider mb-6"></div>
          <h2 class="font-serif text-3xl md:text-4xl text-[#1E3A5F] leading-tight mb-6">
            Not sure which service is right for you?
          </h2>
          <p class="text-[#666666] text-lg mb-8">
            Schedule a complimentary consultation and we'll help you identify the best solutions for your needs.
          </p>
          <a
            href={`${base}contact/`}
            class="inline-block bg-[#1E3A5F] text-white px-8 py-3 rounded font-medium hover:bg-[#1A4F8C] transition-colors"
          >
            Schedule a Consultation
          </a>
        </div>
        <div class="flex justify-center lg:justify-end">
          <img
            src={`${base}images/service-cta.jpg`}
            alt="Kairos team"
            class="w-full max-w-md h-[300px] md:h-[350px] object-cover rounded-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
