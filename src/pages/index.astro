---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
---

<Layout title="Home" description="Kairos Advisory Group â€” independent financial planning made simple. Trusted advisers in Singapore offering tailored solutions for individuals, families, and businesses.">
  <Header />

  <!-- Hero Section -->
  <section class="relative w-full h-auto md:h-[calc(100vh-80px)]">
    <img
      src={`${base}images/hero-team.jpg`}
      alt="Kairos Advisory Team"
      class="w-full h-full object-cover object-[center_45%]"
    />
    <div class="md:absolute md:bottom-0 md:left-0 md:right-0 px-6 md:px-12 lg:px-20 py-4 md:py-8 md:bg-gradient-to-t md:from-black/50 md:to-transparent">
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-[#1E3A5F] md:text-white leading-tight">
        Financial Planning Made Simple.
      </h1>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section class="py-10 md:py-20 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="fade-up">
        <div class="accent-divider mb-6"></div>
        <h2 class="font-serif text-3xl md:text-4xl text-[#1E3A5F] mb-12">Our Approach</h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 fade-up-children">
        <!-- Professional Integrity -->
        <div class="border-l-3 border-[#1E3A5F] pl-6">
          <svg class="w-8 h-8 text-[#E63946] mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          <h3 class="text-xl font-semibold text-[#1E3A5F] mb-3">Professional Integrity</h3>
          <p class="text-[#666666] leading-relaxed">
            We are committed to placing our clients' interests before self. We believe in building long-term relationships based on trust and transparency.
          </p>
        </div>
        <!-- Tailored Solutions -->
        <div class="border-l-3 border-[#1E3A5F] pl-6">
          <svg class="w-8 h-8 text-[#E63946] mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"/></svg>
          <h3 class="text-xl font-semibold text-[#1E3A5F] mb-3">Tailored Solutions</h3>
          <p class="text-[#666666] leading-relaxed">
            Our consultants design solutions specifically for the needs of your business or family to ensure you achieve success with minimal risks.
          </p>
        </div>
        <!-- Systematic Processes -->
        <div class="border-l-3 border-[#1E3A5F] pl-6">
          <svg class="w-8 h-8 text-[#E63946] mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/></svg>
          <h3 class="text-xl font-semibold text-[#1E3A5F] mb-3">Systematic Processes</h3>
          <p class="text-[#666666] leading-relaxed">
            We follow proven systematic processes to ensure that we deliver quality advice, including our six-step Financial Planning Process.
          </p>
        </div>
        <!-- Investment Methodologies -->
        <div class="border-l-3 border-[#1E3A5F] pl-6">
          <svg class="w-8 h-8 text-[#E63946] mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
          <h3 class="text-xl font-semibold text-[#1E3A5F] mb-3">Investment Methodologies</h3>
          <p class="text-[#666666] leading-relaxed">
            We select only the best-in-class insurance and investment products to suit your unique financial goals and risk tolerance.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Expertise Section -->
  <section class="py-12 px-6 md:px-12 lg:px-20 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto fade-up">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 mb-10">
        <div class="lg:max-w-md">
          <div class="accent-divider mb-6"></div>
          <h2 class="font-serif text-2xl md:text-3xl text-[#1E3A5F] mb-4">Our Expertise</h2>
          <p class="text-[#666666] leading-relaxed">
            We adhere to a strict code of professional conduct and offer comprehensive financial planning and advisory services.
          </p>
        </div>
        <a href={`${base}services/`} class="inline-flex items-center gap-4 text-[#1E3A5F] font-medium hover:gap-6 transition-all group">
          <span>View all services</span>
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section with Images -->
  <section class="py-16 md:py-20 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-3 gap-4 md:gap-8 fade-up-children">
        <!-- Business Solutions -->
        <div class="card-hover rounded-lg overflow-hidden">
          <div class="relative">
            <img
              src={`${base}images/expertise-office.jpg`}
              alt="Kairos team in a business strategy session"
              class="w-full h-[250px] md:h-[300px] object-cover rounded-t-lg"
            />
            <a href={`${base}services/`} class="absolute bottom-4 right-4 bg-white/90 text-[#1E5FAA] text-sm font-medium px-4 py-2 rounded hover:bg-white transition">View Details</a>
          </div>
          <div class="border border-t-0 border-gray-200 rounded-b-lg p-6">
            <p class="text-sm text-[#1E3A5F] font-semibold mb-2">Service</p>
            <h3 class="text-lg text-[#666666] mb-4">Business Solutions</h3>
            <p class="text-sm text-[#1E3A5F] font-semibold mb-2">Description</p>
            <p class="text-[#666666]">Comprehensive Protection for Your Enterprise</p>
          </div>
        </div>

        <!-- Financial Planning -->
        <div class="card-hover rounded-lg overflow-hidden">
          <div class="relative">
            <img
              src={`${base}images/service-financial-planning.jpg`}
              alt="Financial planning and analysis"
              class="w-full h-[250px] md:h-[300px] object-cover rounded-t-lg"
            />
            <a href={`${base}services/`} class="absolute bottom-4 right-4 bg-white/90 text-[#1E5FAA] text-sm font-medium px-4 py-2 rounded hover:bg-white transition">View Details</a>
          </div>
          <div class="border border-t-0 border-gray-200 rounded-b-lg p-6">
            <p class="text-sm text-[#1E3A5F] font-semibold mb-2">Service</p>
            <h3 class="text-lg text-[#666666] mb-4">Financial Planning</h3>
            <p class="text-sm text-[#1E3A5F] font-semibold mb-2">Description</p>
            <p class="text-[#666666]">Six-Step Process for Financial Security</p>
          </div>
        </div>

        <!-- Investment Methodologies -->
        <div class="card-hover rounded-lg overflow-hidden">
          <div class="relative">
            <img
              src={`${base}images/investment-methodologies.png`}
              alt="Investment methodologies and team"
              class="w-full h-[250px] md:h-[300px] object-cover rounded-t-lg"
            />
            <a href={`${base}services/`} class="absolute bottom-4 right-4 bg-white/90 text-[#1E5FAA] text-sm font-medium px-4 py-2 rounded hover:bg-white transition">View Details</a>
          </div>
          <div class="border border-t-0 border-gray-200 rounded-b-lg p-6">
            <p class="text-sm text-[#1E3A5F] font-semibold mb-2">Service</p>
            <h3 class="text-lg text-[#666666] mb-4">Investment Methodologies</h3>
            <p class="text-sm text-[#1E3A5F] font-semibold mb-2">Description</p>
            <p class="text-[#666666]">Best-in-Class Products for Your Goals</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Partner CTA Section -->
  <section class="py-16 md:py-20 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-7xl mx-auto fade-up">
      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <!-- Image -->
        <div>
          <img
            src={`${base}images/team-adventure.png`}
            alt="Kairos team on adventure"
            class="w-full h-[250px] md:h-[400px] lg:h-[500px] object-cover rounded-lg"
          />
        </div>

        <!-- Content -->
        <div class="lg:pl-8 lg:border-l border-gray-200">
          <div class="accent-divider mb-6"></div>
          <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl text-[#1E3A5F] leading-tight mb-6">
            Partner with us for your financial success
          </h2>
          <p class="text-[#666666] leading-relaxed mb-8">
            The Kairos Advisory Group network is an exclusive association of distinguished financial advisers. Our team is ready to guide you on your journey to financial security and success.
          </p>
          <div class="flex flex-col sm:flex-row flex-wrap gap-4">
            <a
              href={`${base}contact/`}
              class="bg-[#1E3A5F] text-white px-8 py-3 rounded font-medium hover:bg-[#1A4F8C] transition-colors text-center"
            >
              Contact Us
            </a>
            <a
              href={`${base}team/`}
              class="border border-[#1E3A5F] text-[#1E3A5F] px-8 py-3 rounded font-medium hover:bg-[#1E3A5F] hover:text-white transition-colors text-center"
            >
              Meet Our Team
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
