---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Home">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative w-full h-[70vh] min-h-[500px]">
    <img 
      src="/images/hero-team.jpg" 
      alt="Kairos Advisory Team" 
      class="w-full h-full object-cover"
    />
  </section>

  <!-- Tagline Section -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-[#1A1A2E] leading-tight">
        Financial Planning Made Simple.
      </h1>
    </div>
  </section>

  <!-- TODO: More sections to be added based on full page screenshots -->
  <!-- Placeholder sections below - update when full design is available -->

  <!-- Services Preview Section -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20 bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <h2 class="font-serif text-3xl md:text-4xl text-center text-[#1A1A2E] mb-12">
        Our Services
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold text-[#1E3A5F] mb-4">Wealth Management</h3>
          <p class="text-[#666666]">Comprehensive strategies to grow and protect your wealth for generations.</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold text-[#1E3A5F] mb-4">Retirement Planning</h3>
          <p class="text-[#666666]">Secure your future with personalized retirement solutions.</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold text-[#1E3A5F] mb-4">Investment Advisory</h3>
          <p class="text-[#666666]">Expert guidance to help you make informed investment decisions.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20 bg-[#1E3A5F]">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-serif text-3xl md:text-4xl text-white mb-6">
        Ready to Start Your Journey?
      </h2>
      <p class="text-white/80 text-lg mb-8">
        Let's discuss how we can help you achieve your financial goals.
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-white text-[#1E3A5F] px-8 py-3 rounded-full font-medium hover:bg-gray-100 transition-colors"
      >
        Get in Touch
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white py-12 px-6 md:px-12 lg:px-20 border-t border-gray-100">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="flex items-center">
          <svg viewBox="0 0 40 40" class="w-8 h-8" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="2" y="2" width="36" height="36" rx="4" fill="#1E3A5F"/>
            <path d="M12 10V30" stroke="white" stroke-width="3" stroke-linecap="round"/>
            <path d="M12 20L24 10" stroke="white" stroke-width="3" stroke-linecap="round"/>
            <path d="M12 20L24 30" stroke="#E63946" stroke-width="3" stroke-linecap="round"/>
          </svg>
          <span class="ml-2 text-[#1E3A5F] font-bold">KAIROS ADVISORY</span>
        </div>
        <p class="text-[#666666] text-sm">
          Â© 2024 Kairos Advisory Group. All Rights Reserved.
        </p>
      </div>
    </div>
  </footer>
</Layout>
