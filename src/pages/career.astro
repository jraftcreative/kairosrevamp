---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');

const benefits = [
  {
    title: 'Competitive Commission',
    image: `${base}images/career-compensation.jpg`,
    description: 'Earn what you deserve with our industry-leading commission structure and performance incentives.',
  },
  {
    title: 'Training & Development',
    image: `${base}images/career-training.jpg`,
    description: 'Continuous learning through mentorship programmes, workshops, and professional certifications.',
  },
  {
    title: 'Supportive Culture',
    image: `${base}images/career-culture.jpg`,
    description: 'A collaborative team environment where everyone supports each other to succeed.',
  },
  {
    title: 'Career Growth',
    image: `${base}images/career-growth.jpg`,
    description: 'Clear progression pathways to help you advance and reach your full potential.',
  },
];
---

<Layout title="Career" description="Join Kairos Advisory Group â€” competitive commission, mentorship, and career growth for financial professionals in Singapore. Build your future with us.">
  <Header />

  <!-- Hero Section -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-7xl mx-auto max-w-3xl">
      <p class="text-sm font-semibold tracking-widest text-[#1E3A5F] uppercase mb-4">Career</p>
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-[#1E3A5F] leading-tight mb-8">
        Build Your Future With Us
      </h1>
      <p class="text-[#666666] text-lg leading-relaxed">
        Join a team of professionals committed to making a difference in people's financial lives. We're always looking for talented individuals who share our values.
      </p>
    </div>
  </section>

  <!-- Why Join Kairos -->
  <section class="pb-16 md:pb-24 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-7xl mx-auto">
      <h2 class="font-serif italic text-2xl md:text-3xl text-[#1E3A5F]">Why Join Kairos?</h2>
    </div>
  </section>

  <!-- Benefits Grid - Full Width Images -->
  <section class="w-full">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 w-full">
      {benefits.map((benefit) => (
        <div class="relative group cursor-pointer overflow-hidden">
          <img
            src={benefit.image}
            alt={benefit.title}
            class="w-full h-[250px] md:h-[350px] object-cover transition-transform duration-300 group-hover:scale-105"
          />
          <!-- Hover fade overlay -->
          <div class="absolute inset-0 bg-[#1E3A5F]/0 transition-all duration-300 group-hover:bg-[#1E3A5F]/40 flex items-center justify-center">
            <div class="hidden group-hover:flex flex-col items-center justify-center px-6 text-center">
              <p class="text-white text-xl md:text-2xl font-serif mb-3">{benefit.title}</p>
              <p class="text-white/80 text-sm leading-relaxed max-w-xs">{benefit.description}</p>
            </div>
          </div>
          <!-- Default: dark bar with title at bottom -->
          <div class="absolute bottom-0 left-0 right-0 bg-[#1E3A5F] py-3 transition-all duration-300 group-hover:opacity-0">
            <p class="text-white text-xl md:text-2xl font-serif text-center px-4">{benefit.title}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div>
          <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl text-[#1E3A5F] leading-tight mb-6">
            Interested in joining our team?
          </h2>
          <p class="text-[#666666] text-lg mb-8">
            Send us your resume and we'll be in touch to discuss opportunities.
          </p>
          <a
            href={`${base}contact/`}
            class="inline-block bg-[#1E3A5F] text-white px-8 py-3 font-medium hover:bg-[#1A4F8C] transition-colors"
          >
            Contact Us
          </a>
        </div>

        <!-- Image -->
        <div>
          <img
            src={`${base}images/career-cta.jpg`}
            alt="Kairos team"
            class="w-full h-[300px] md:h-[400px] object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
