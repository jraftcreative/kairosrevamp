---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
const navItems = [
  { label: 'About Us', href: `${base}about/` },
  { label: 'Our Approach', href: `${base}approach/` },
  { label: 'Services', href: `${base}services/` },
  { label: 'Our Team', href: `${base}team/` },
  { label: 'Career', href: `${base}career/` },
  { label: 'Contact', href: `${base}contact/` },
];
---

<header class="bg-white py-4 px-6 md:px-12 lg:px-20">
  <nav class="max-w-7xl mx-auto flex items-center justify-between">
    <!-- Logo -->
    <a href={base} class="flex items-center">
      <img src={`${base}images/kairos-logo.svg`} alt="Kairos Advisory Group" class="h-12 w-auto" />
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center gap-8">
      {navItems.slice(0, -1).map((item) => (
        <a 
          href={item.href} 
          class="text-[#333333] text-sm font-medium hover:text-[#1E5FAA] transition-colors"
        >
          {item.label}
        </a>
      ))}
      <a 
        href={`${base}contact/`}
        class="bg-[#1E5FAA] text-white px-6 py-2.5 rounded-full text-sm font-medium hover:bg-[#1A4F8C] transition-colors"
      >
        Contact Us
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button 
      id="mobile-menu-btn"
      class="lg:hidden p-2 text-[#333333]"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden mt-4 pb-4 border-t border-gray-100">
    <div class="flex flex-col gap-4 pt-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-[#333333] text-sm font-medium hover:text-[#1E5FAA] transition-colors px-2"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
