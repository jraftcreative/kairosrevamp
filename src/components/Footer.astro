---
const navigation = [
  { label: 'About Us', href: '/about' },
  { label: 'Our Approach', href: '/approach' },
  { label: 'Services', href: '/services' },
  { label: 'Our Team', href: '/team' },
  { label: 'Career', href: '/career' },
  { label: 'Contact Us', href: '/contact' },
];

const legal = [
  { label: 'FAQ', href: '/faq' },
  { label: 'Terms', href: '/terms' },
  { label: 'Privacy', href: '/privacy' },
];

const services = [
  { label: 'Financial Planning', href: '/services/financial-planning' },
  { label: 'Insurance Selection', href: '/services/insurance-selection' },
  { label: 'Investment Methodologies', href: '/services/investment-methodologies' },
  { label: 'Business Solutions', href: '/services/business-solutions' },
];
---

<footer class="bg-[#F5F7FA] pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20">
    <!-- Logo -->
    <div class="flex justify-center mb-12">
      <a href="/" class="flex items-center gap-2">
        <svg viewBox="0 0 40 40" class="w-12 h-12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="2" y="2" width="36" height="36" rx="4" fill="#1E3A5F"/>
          <path d="M12 10V30" stroke="white" stroke-width="3" stroke-linecap="round"/>
          <path d="M12 20L24 10" stroke="white" stroke-width="3" stroke-linecap="round"/>
          <path d="M12 20L24 30" stroke="#E63946" stroke-width="3" stroke-linecap="round"/>
        </svg>
        <div>
          <span class="text-[#1E3A5F] text-2xl font-bold tracking-wide">KAIROS</span>
          <span class="block text-[#1E3A5F] text-[10px] tracking-[0.25em] uppercase">Advisory</span>
        </div>
      </a>
    </div>

    <!-- Links Grid -->
    <div class="grid md:grid-cols-3 gap-12 mb-16">
      <!-- Navigation -->
      <div>
        <h4 class="text-[#1E3A5F] font-semibold mb-6">Navigation</h4>
        <ul class="space-y-4">
          {navigation.map((item) => (
            <li>
              <a href={item.href} class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="text-[#1E3A5F] font-semibold mb-6">Legal</h4>
        <ul class="space-y-4">
          {legal.map((item) => (
            <li>
              <a href={item.href} class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-[#1E3A5F] font-semibold mb-6">Services</h4>
        <ul class="space-y-4">
          {services.map((item) => (
            <li>
              <a href={item.href} class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-300 pt-8">
      <p class="text-[#666666] text-sm text-center">
        Copyright Â© 2026 Kairos Advisory Group. All Rights Reserved. We are an Advisory Group with 
        <a href="https://ippfa.com" target="_blank" rel="noopener noreferrer" class="text-[#1E5FAA] hover:underline">
          IPP Financial Advisers Pte Ltd.
        </a>
      </p>
    </div>
  </div>
</footer>
