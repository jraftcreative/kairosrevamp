---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
const navigation = [
  { label: 'About Us', href: `${base}about/` },
  { label: 'Our Approach', href: `${base}approach/` },
  { label: 'Services', href: `${base}services/` },
  { label: 'Our Team', href: `${base}team/` },
  { label: 'Career', href: `${base}career/` },
  { label: 'Contact Us', href: `${base}contact/` },
];

const legal = [
  { label: 'FAQ', href: `${base}faq/` },
  { label: 'Terms', href: `${base}terms/` },
  { label: 'Privacy', href: `${base}privacy/` },
];

const services = [
  { label: 'Financial Planning', href: `${base}services/financial-planning/` },
  { label: 'Insurance Selection', href: `${base}services/insurance-selection/` },
  { label: 'Investment Methodologies', href: `${base}services/investment-methodologies/` },
  { label: 'Business Solutions', href: `${base}services/business-solutions/` },
];
---

<footer class="bg-[#F5F7FA] pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20">
    <!-- Logo & Social -->
    <div class="flex flex-col items-center mb-12">
      <a href={base}>
        <img src={`${base}images/kairos-logo.svg`} alt="Kairos Advisory Group" class="h-14 w-auto" />
      </a>
      <div class="flex items-center gap-5 mt-6">
        <a href="https://instagram.com/kairosadvisorygroup" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
        </a>
        <a href="https://tiktok.com/@kairosadvisory" target="_blank" rel="noopener noreferrer" aria-label="TikTok" class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 0010.86 4.46V13.2a8.16 8.16 0 005.58 2.17V12a4.85 4.85 0 01-5.58-2.17V2.44h3.45a4.83 4.83 0 002.13 4.25z"/></svg>
        </a>
      </div>
    </div>

    <!-- Links Grid -->
    <div class="grid md:grid-cols-3 gap-6 md:gap-12 mb-16">
      <!-- Navigation -->
      <div>
        <h4 class="text-[#1E3A5F] font-semibold mb-6">Navigation</h4>
        <ul class="space-y-4">
          {navigation.map((item) => (
            <li>
              <a href={item.href} class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="text-[#1E3A5F] font-semibold mb-6">Legal</h4>
        <ul class="space-y-4">
          {legal.map((item) => (
            <li>
              <a href={item.href} class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-[#1E3A5F] font-semibold mb-6">Services</h4>
        <ul class="space-y-4">
          {services.map((item) => (
            <li>
              <a href={item.href} class="text-[#666666] hover:text-[#1E3A5F] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-300 pt-8">
      <p class="text-[#666666] text-sm text-center">
        Copyright Â© 2026 Kairos Advisory Group. All Rights Reserved. We are an Advisory Group with 
        <a href="https://ippfa.com" target="_blank" rel="noopener noreferrer" class="text-[#1E5FAA] hover:underline">
          IPP Financial Advisers Pte Ltd.
        </a>
      </p>
    </div>
  </div>
</footer>
